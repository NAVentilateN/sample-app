<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>
<p>This will be a signup page for new users.</p>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with model:@user, method: :post, class: "new_user", id:"new_user" do |form| %>
      <%= render 'shared/error_messages' %>
      <%= form.label :name, "Enter your username:" %>
      <%= form.text_field :name, required: true, placeholder: "Username",maxlength: 20 %>
      <%= form.label :first_name, "Enter your first name:" %>
      <%= form.text_field :first_name, required: true, placeholder: "First Name" %>
      <%= form.label :last_name, "Enter your last name:" %>
      <%= form.text_field :last_name, required: true, placeholder: "Last Name"  %>
      <%= form.label :email, "Enter your email:" %>
      <%= form.email_field  :email, required: true, placeholder: "email@email.com" %>
      <%= form.label :password, "Enter your password:" %>
      <%= form.password_field  :password, required: true, minlength: 6 %>
      <%= form.label :password_confirmation, "Confirm your password:" %>
      <%= form.password_field  :password_confirmation, required: true, minlength: 6 %>
      <%= form.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
